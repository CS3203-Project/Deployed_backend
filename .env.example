# Application Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/backend

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS S3 Configuration (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# AWS SES Configuration (for email service)
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Gemini AI Configuration (for embeddings)
GEMINI_API_KEY=your-gemini-api-key
EMBEDDING_API_URL=https://generativelanguage.googleapis.com/v1beta/models
EMBEDDING_MODEL=text-embedding-004

# RabbitMQ Configuration (for message queue)
RABBITMQ_URL=amqp://localhost:5672

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Redis (if using for caching/sessions)
# REDIS_URL=redis://localhost:6379

# Optional: Logging
# LOG_LEVEL=info

# Optional: API Keys for other services
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# SENDGRID_API_KEY=your-sendgrid-api-key
